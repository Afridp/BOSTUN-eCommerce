<body>
    <!-- navbar -->

    <div class="container">
        <div class="row mt-3">
            <div class="col-lg-3 col-md-3">
                <div class="header__logo" style="text-align: center;">
                    <a href="/views/user/index.ejs" style="text-decoration: none;">
                        <h2
                            style="color: rgb(0, 100, 100); font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; margin-top: 20px;">
                            BOSTON_ADMIN
                        </h2>
                    </a>
                </div>
            </div>
        </div>




        <!-- <div class="col-lg-6 col-md-6">
                <nav class="header__menu mobile-menu">
                    <ul>
                        <li class="active"><a href="/index.ejs" style="color: rgb(255, 255, 255);">Home</a></li>
                        <li><a href="/shop" style="color: rgb(255, 255, 255);">Shop</a></li>
                        <li><a href="/contact" style="color: rgb(255, 255, 255);">Contact Us</a></li>
