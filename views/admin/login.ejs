                    </ul>
                </nav>
            </div> -->
        <div class="canvas__open"><i class="fa fa-bars"></i></div>


        <!-- navbar end -->

        <!-- login section -->
        <div class="container center-div ">
            <div class="border py-5 px-3 col-lg-4 col-md-6 col-sm-8">
                <div class="title pb-4 text-center">
                    <h2 class="font-weight-bold" style="color: rgb(255, 255, 255);"> Admin Login </h2>
                    <!-- <span style="font-size: small; color: #ffffff;">Log in for an existing account</span> -->


                </div>



                <% if (typeof message !=='undefined' ) { %>
                    <%if(message==='' ){%>

                        <h6>
                            <%= message %>
                        </h6>

                        <%}else if(message==='invalid admin details' ){%>
                            <div class="alert alert-danger">
                                <p>
                                    <%= message %>
                                </p>
                            </div>
                            <%}%>
                                <% } %>


                                    <form action="" method="post">
                                        <div class="form-group">
                                            <input type="email" class="form-control" placeholder="Enter Email"
                                                name="email" id="email" required>
                                            <p id="para1" style="color: rgb(211, 116, 7);"></p>
                                        </div>
                                        <div class="form-group">

                                            <input type="password" class="form-control" placeholder="Enter Password"
                                                id="password" name="password" required>
                                            <p id="para2" style="color: rgb(255, 132, 0);"></p>
                                        </div>

                                        <input type="submit" class="btn btn-success mt-3" value="Login"
                                            onclick="show()">


            </div>
        </div>
        <!-- login section end -->




    </div>


    <script>
        function show() {
            const email = document.getElementById("email").value;
            const password = document.getElementById("password").value;
            const para1 = document.getElementById("para1");
            const para2 = document.getElementById("para2");
            if (email == "") {
                para1.innerText = "Enter your email"
            } else if (!/^[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$/.test(email)) {
                para1.innerText = "Enter a valid email"
            }
            if (password == "") {
                para2.innerText = "Enter your password"
            }
        }
    </script>



</body>

