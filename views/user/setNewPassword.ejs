    <script>
        function show() {
            const newPassword = document.getElementById("newPassword").value;
            const confirmPassword = document.getElementById("confirmNewPassword").value;

            const para1 = document.getElementById("para1");
            const para2 = document.getElementById("para2");

            para1.innerText = "";
            para2.innerText = "";

            if (newPassword === "") {
                para1.innerText = "Please Enter The New Password Here";
                return false;
            }

            if (confirmPassword === "") {
                para2.innerText = "Confirm The New Password Here";
                return false;
            }

            // Password strength validation
            if (newPassword.length < 6) {
                para2.innerText = "Password must be at least 6 characters long.";
                return false;
            }

            if (!/[A-Z]/.test(newPassword)) {
                para2.innerText = "Password must contain at least one uppercase letter.";
                return false;
            }

            if (!/[a-z]/.test(newPassword)) {
                para2.innerText = "Password must contain at least one lowercase letter.";
                return false;
            }

            if (!/\d/.test(newPassword)) {
                para2.innerText = "Password must contain at least one digit.";
                return false;
            }

            if (!/[!@#$%^&*]/.test(newPassword)) {
                para2.innerText = "Password must contain at least one special character.";
                return false;
            }

            if (newPassword !== confirmPassword) {
                para2.innerText = "Passwords do not match.";
                return false;
            }
        }



    </script>
