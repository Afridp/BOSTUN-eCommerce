                <script>
                    function removeFromCart(productId) {

                        Swal.fire({
                            title: 'Are you sure?',
                            text: "You want to delete!",
                            icon: 'warning',
                            showCancelButton: true,
                            confirmButton: '#3085d6',
                            cancelButton: '#d33',
                            confirmButtonText: 'Yes, remove!'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                $.ajax({
                                    url: '/deleteItems',
                                    data: {
                                        productId: productId
                                    },
                                    method: 'post',
                                    success: (response) => {
                                        if (response.success) {

                                            $('#reloadDiv').load('/loadCart #reloadDiv', () => {

                                                Swal.fire({
                                                    title: 'Deleted!',
                                                    text: 'Your item has been deleted.',
                                                    icon: 'success',
                                                    timer: 1500,
                                                    showConfirmButton: false
                                                });
                                            });
                                        } else {
                                            Swal.fire({
                                                title: 'Error!',
                                                text: 'Failed to delete item.',
                                                icon: 'error',
                                                showConfirmButton: false
                                            });
                                        }
                                    },
                                    error: (error) => {
                                        console.log(error);
                                        Swal.fire({
                                            title: 'Error!',
                                            text: 'An error occurred while deleting the item.',
                                            icon: 'error',
                                            showConfirmButton: false
                                        });
                                    }
                                });
                            }
                        });
                    }


                    function increaseQuantity(cartId, productId, count) {
                        $.ajax({
                            url: '/changes',
                            method: 'post',
                            data: {
                                cartId: cartId,
                                productId,
                                count: count
                            },
                            success: (response) => {
                                if (response.success) {
                                    $('#reloadDiv').load('/loadCart #reloadDiv')
                                } else {
                                    Swal.fire({
                                        title: "Error",
                                        icon: 'error',
                                        text: response.message,
                                        timer: 2000
                                    })
                                }
                            },
                            error: (error) => {

                                Swal.fire({
                                    title: "Error",
                                    icon: 'error',
                                    text: response.message,
                                    timer: 1500
                                })
                            }
                        })
                    }

