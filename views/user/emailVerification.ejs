    <script>
        function validateform() {
            const email = document.myform.email.value;
            const password = document.myform.password.value;

            if (email == null || email == "") {
                document.getElementById('form-error').innerHTML = "Email can't be blank";
                return false;
            } else if (password == null || password == "") {
                document.getElementById('form-error').innerHTML = "Password can't be blank";
                return false;
            } else {
                document.getElementById("myform").submit();
            }
        }

        function show() {
            const email = document.getElementById("email").value;
            const password = document.getElementById("password").value;
            const name = document.getElementById("name").value;
            const number = document.getElementById("number").value;

            const para1 = document.getElementById("para1");
            const para2 = document.getElementById("para2");
            const para3 = document.getElementById("para3");
            const para4 = document.getElementById("para4");

            if (email == "") {
                para1.innerText = "Enter your email"
            } else if (!/^[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$/.test(email)) {
                para1.innerText = "Enter a valid email"
            }

            if (name == "") {
                para4.innerText = "Enter a valid name"
            } else if (!/^[a-zA-Z]+$/.test(name)) {
                para4.innerText = "Name can only contain letters"
            }

            if (number == "") {
                para3.innerText = "Enter a valid number"
            } else if (!/^\d{10}$/.test(number)) {
                para3.innerText = "Mobile can only contain digits"
            }

            if (password == "") {
                para2.innerText = "Enter your password"
            }

        }

        document.getElementById('registration-form').addEventListener('submit', function (event) {

            event.preventDefault();

            alert('Registration successful!');


            event.target.submit();
        });
