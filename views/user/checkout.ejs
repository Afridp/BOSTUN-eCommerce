                        const total = document.getElementById('total').value
                        const code = document.getElementById('code').value


                        $.ajax({
                            url: '/checkout',
                            method: 'post',
                            data: {
                                selectedAddress: address,
                                payment: payment,
                                total: total,
                                code
                            },
                            success: (response) => {
                                if (response.success == true) {
